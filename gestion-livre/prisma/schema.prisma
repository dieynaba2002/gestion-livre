generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  username   String
  email      String   @unique
  password   String
  books      Book[]
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Book {
  id          Int      @id @default(autoincrement())
  title       String
  author      String
  description String
  published   DateTime
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
  category    BookCategory
  photoUrl    String?
}

enum BookCategory {
  ROMAN
  NOUVELLE
  CHRONIQUE
  ESSAI
  AUTRE
}
